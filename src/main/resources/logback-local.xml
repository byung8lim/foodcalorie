<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="false">
    <!-- VM argments에 home.path 추가하여 사용 -->
    
    <appender name="STDERR" class="ch.qos.logback.core.ConsoleAppender">
    	<target>System.err</target>
    	<filter class="ch.qos.logback.classic.filter.ThresholdFilter">
      		<level>DEBUG</level>
    	</filter>
		<encoder>
        	<pattern>%level %d{ISO8601} %logger{35} %method:%line %thread - %msg%n</pattern>
    	</encoder>
  	</appender>
    
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    	<target>System.out</target>
    	<filter class="ch.qos.logback.classic.filter.ThresholdFilter">
      		<level>DEBUG</level>
    	</filter>
    	<filter class="ch.qos.logback.classic.filter.LevelFilter">
      		<level>DEBUG</level>
      		<onMatch>DENY</onMatch>
    	</filter>
    	<filter class="ch.qos.logback.classic.filter.LevelFilter">
      		<level>DEBUG</level>
      		<onMatch>DENY</onMatch>
    	</filter>
        <encoder>
            <pattern>%level %d{ISO8601} %logger{35} %method:%line %thread - %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="dailyRollingFileAppender" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<append>false</append>
		<file>${log.file.path:-C://dev/work/fitness/foodcalorie/logs}/application.log</file>
		<!-->prudent>true</prudent-->
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>${log.file.path:-C://dev/work/fitness/foodcalorie/logs}/application-%d{yyyyMMdd}.log</fileNamePattern>
			<maxHistory>10</maxHistory>
		</rollingPolicy>
		<encoder>
			<pattern>%level %d{ISO8601} %logger{35} %method:%line %thread - %msg%n</pattern>
		</encoder>
    </appender>
    <logger name="java.sql" additivity="false">
        <level value="DEBUG" />
        <appender-ref ref="STDOUT" />
    </logger>
    <logger name="org" additivity="false">
        <level value="DEBUG" />
        <appender-ref ref="STDOUT" />
    </logger>
    <logger name="org.apache.http" additivity="false">
        <level value="DEBUG" />
        <appender-ref ref="STDOUT" />
    </logger>
    <!-- Spring 관련 로그 -->
    <logger name="org.springframework.boot" additivity="false">
        <level value="DEBUG" />
        <appender-ref ref="STDOUT" />
    </logger>
    <logger name="org.springframework.boot.web" additivity="false">
        <level value="DEBUG" />
        <appender-ref ref="STDOUT" />
    </logger>
    <logger name="org.springframework.boot.actuate" additivity="false">
        <level value="DEBUG" />
        <appender-ref ref="STDOUT" />
    </logger>
    <logger name="com.ulisesbocchio" additivity="false">
        <level value="DEBUG" />
        <appender-ref ref="STDOUT" />
    </logger>
    <logger name="com.netflix.zuul.http" additivity="false">
        <level value="DEBUG" />
        <appender-ref ref="STDOUT" />
    </logger>
    <logger name="com.zaxxer.hikari.pool" additivity="false">
        <level value="DEBUG" />
        <appender-ref ref="STDOUT" />
    </logger>

    <root level="${LOG_LEVEL:-DEBUG}">
        <appender-ref ref="STDOUT" />
        <appender-ref ref="STDERR" />
        <appender-ref ref="dailyRollingFileAppender" />
    </root>
</configuration>